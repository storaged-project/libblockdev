    plugins[BD_PLUGIN_LOOP].handle = NULL;

    if (plugins[BD_PLUGIN_CRYPTO].handle && !unload_crypto (plugins[BD_PLUGIN_CRYPTO].handle))
        bd_utils_log_format (BD_UTILS_LOG_WARNING, "Failed to close the crypto plugin");
